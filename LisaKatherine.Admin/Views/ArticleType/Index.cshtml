@model IEnumerable<LisaKatherine.Interface.IArticleType>
@{
    ViewBag.Title = "Article Types";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}
<h1>
    Index</h1>
<p>
    @Html.ActionLink("Create New", "Create")
</p>
<table cellspacing="0">
    <tr>
        <th>
            @Html.ActionLink("Id", "Index", new { sortOrder = ViewBag.IdSortParm })
        </th>
        <th>
            @Html.ActionLink("Article Type", "Index", new { sortOrder = ViewBag.ArticleTypeSortParm })
        </th>
        <th>
        </th>
    </tr>
    @{var alternating = false;

      foreach (var item in Model)
      {
        <tr class='@(alternating ? "alt" : "nor")'>
            <td>@item.ArticleTypeId
            </td>
            <td>
                @item.ArticleTypeName
            </td>
            <td>
                @Html.ActionLink("Edit", "Edit", new { id = item.ArticleTypeId }) |
                @*@Html.ActionLink("Details", "Details", new { id = item.ArticleTypeId }) |*@
                @Html.ActionLink("Delete", "Delete", new { id = item.ArticleTypeId })
            </td>
        </tr>
        alternating = !alternating;
      }
    }
</table>
