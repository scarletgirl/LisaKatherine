@model LisaKatherine.Models.Articles
@{
    ViewBag.Title = "Edit";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}
<h1>
    Edit Articles</h1>
<script src="@Url.Content("~/Scripts/jquery.validate.min.js")" type="text/javascript"></script>
<script src="@Url.Content("~/Scripts/jquery.validate.unobtrusive.min.js")" type="text/javascript"></script>
@using (Html.BeginForm())
{
    @Html.ValidationSummary(true)
    <fieldset>
        <legend>Articles</legend>
        @Html.HiddenFor(model => model.articleId)
        @Html.HiddenFor(model => model.userid)
        <div class="editor-label">
            Article Type:
        </div>
        <div class="editor-field">
            @Html.DropDownList("articleTypeId_0")
        </div>
        <div class="editor-label">
            @Html.LabelFor(model => model.datePublished):
        </div>
        <div class="editor-field">
            @Html.TextBox("datePublished" , String.Format("{0:dd/MM/yyyy}",Model.datePublished)) 

        </div>
        <div class="editor-label">
            @Html.LabelFor(model => model.headline):
        </div>
        <div class="editor-field">
            @Html.EditorFor(model => model.headline)
            @Html.ValidationMessageFor(model => model.headline)
        </div>
        <div class="editor-label">
            @Html.LabelFor(model => model.strapline):
        </div>
        <div class="editor-field">
            @Html.EditorFor(model => model.strapline)
            @Html.ValidationMessageFor(model => model.strapline)
        </div>
        <div class="editor-label">
            @Html.LabelFor(model => model.body):
        </div>
        <div class="editor-field">
            @Html.TextAreaFor(model => model.body)
            @Html.ValidationMessageFor(model => model.body)
        </div>
        <div class="display-label">
            Date Created:</div>
        <div class="display-field">@String.Format("{0:dd/MM/yyyy}", Model.dateCreated)</div>
        <div class="display-label">
            Date Published:</div>
        <div class="display-field">@String.Format("{0:dd/MM/yyyy}", Model.datePublished)</div>
        <div class="display-label">
            Author:
        </div>
        <div class="display-field">@Model.user.firstname @Model.user.lastname</div>
        <p>
            <input type="submit" class="btn" value="Save" name="submitButton" />
            <input type="submit" class="btn" value="Save & Publish" name="submitButton" />
            <input type="button" class="btn" value="Preview" name="submitButton" onclick="window.open('http://www.lisakatherine.com/blog/Preview/@Model.articleId', 'preview');return false;" />
        </p>
    </fieldset>
}
<div>
    @Html.ActionLink("Back to List", "Index")
</div>
<script language="javascript" type="text/javascript" src="/Scripts/datePicker.js">
</script>
