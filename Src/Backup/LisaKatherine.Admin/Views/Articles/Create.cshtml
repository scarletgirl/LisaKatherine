@model LisaKatherine.Models.Articles
@{
    ViewBag.Title = "Create";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}
<h1>
    Create</h1>
<script src="@Url.Content("~/Scripts/jquery.validate.min.js")" type="text/javascript"></script>
<script src="@Url.Content("~/Scripts/jquery.validate.unobtrusive.min.js")" type="text/javascript"></script>
@using (Html.BeginForm())
{
    @Html.ValidationSummary(true)
    <fieldset>
        <legend>Articles</legend>
        <div class="editor-label">
            Article Type:
        </div>
        <div class="editor-field">
            @Html.DropDownList("articleTypeId_0")
        </div>
        <div class="editor-label">
            @Html.LabelFor(model => model.datePublished)
        </div>
        <div class="editor-field">
            @Html.TextBox("datePublished") 
        </div>
        <div class="editor-label">
            @Html.LabelFor(model => model.headline)
        </div>
        <div class="editor-field">
            @Html.EditorFor(model => model.headline)
            @Html.ValidationMessageFor(model => model.headline)
        </div>
        <div class="editor-label">
            @Html.LabelFor(model => model.strapline)
        </div>
        <div class="editor-field">
            @Html.EditorFor(model => model.strapline)
            @Html.ValidationMessageFor(model => model.strapline)
        </div>
        <div class="editor-label">
            @Html.LabelFor(model => model.body)
        </div>
        <div class="editor-field">
            @Html.TextAreaFor(model => model.body)
            @Html.ValidationMessageFor(model => model.body)
        </div>
        <p>
            <input type="submit" value="Create" class="btn" name="submitButton" />
            <input type="submit" value="Create & Publish" class="btn" name="submitButton" />
            
        </p>
    </fieldset>
}
<div>
    @Html.ActionLink("Back to List", "Index")
</div>
<script language="javascript" type="text/javascript" src="/Scripts/datePicker.js">
</script>